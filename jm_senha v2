<?php
session_start();

$senha = "1";
$login = "a";

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    if (($_POST["login"] === $login) && ($_POST["senha"] === $senha)){
        $_SESSION["logou"] = 1;
        header("Location: jornal_da_manha_verificado.php");
    }else{
        $_SESSION["erro"] = 1;
        header("Location: jm_login.php");
    }
}



?>
