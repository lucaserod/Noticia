<?php
session_start();

if($_SERVER["REQUEST_METHOD"] == "POST"){
    if($_POST["action"] == "Enviar"){
        if(isset($_SESSION["logou"]) && $_SESSION["logou"] == 1){
        header("Location: jornal_da_manha_verificado.php");
        }else{
            $_SESSION["error"] = 1;
            header("Location: jm_login.php");

        }
    }
    elseif($_POST["action"] == "Criar"){
        $_SESSION["logou"] = 2;
        header("Location: criar_usuario.php");
        
    }
}



?>
